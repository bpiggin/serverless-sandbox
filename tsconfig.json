{
  "compilerOptions": {
    "lib": ["es2017"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/lib/services/*"],
      "@dataLayer/*": ["src/lib/dataLayer/*"],
      "@types/*": ["src/lib/types/*"],
      "@middleware/*": ["src/lib/middleware/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ]
}
